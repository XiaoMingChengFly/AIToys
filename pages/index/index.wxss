input,
textarea {
  border: 1rpx solid #cbd5e1;
  border-radius: 12rpx;
  padding: 14rpx;
  background: #fff;
}

textarea {
  width: 100%;
  min-height: 140rpx;
  box-sizing: border-box;
}

.player-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 12rpx;
}

.name-input {
  flex: 1;
}

.score-input {
  width: 180rpx;
  text-align: right;
}

.mini-danger {
  margin: 0;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.actions button {
  flex: 1;
}
